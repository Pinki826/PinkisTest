    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "./PageObjects/Data/*.json",  //<-- Dynamic path to your test files
    "./specs/TestData/*.json",
    "./specs/*.ts",
    "./PageObjects/*.ts",  
   ],
  
}