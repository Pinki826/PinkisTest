{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
   // "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    //"mapRoot": "./dist/out-tsc/",
    //"sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    //"preserveConstEnums": true,
    "target": "es6",   //es2017
    "declaration": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
